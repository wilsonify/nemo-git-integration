[Nemo Action]
Name=Git Log
Comment=Display the git log
Exec=sh -c "cd %P && git log --graph --pretty=format:'%C(yellow)%h%Creset -%C(auto)%d%Creset %s %C(blue)%an%Creset %C(green)(%ar)%Creset' | zenity --text-info --width=800 --height=600 --title='Git Log'"
Icon-Name=git-log
Selection=any
Extensions=dir
